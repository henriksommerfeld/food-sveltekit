{
  "name": "food-sveltekit",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "copy-images": "cp -rf ./static/uploads ./src/",
    "dev": "npm run copy-images && vite dev",
    "build": "npm run copy-images && svelte-kit sync && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:once": "vitest --run",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "deps": "pnpm ls --depth Infinity --parseable | wc -l",
    "docker:build": "docker build -t food-sveltekit .",
    "docker:run": "docker run food-sveltekit",
    "docker:clean:build": "docker build -t clean-images -f scripts/clean-images.dockerfile .",
    "docker:clean:run": "docker run -it -v ${PWD}/static/:/app/content clean-images"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@sindresorhus/slugify": "3.0.0",
    "@sveltejs/adapter-auto": "6.1.0",
    "@sveltejs/adapter-static": "3.0.10",
    "@sveltejs/kit": "2.49.2",
    "@sveltejs/vite-plugin-svelte": "6.2.1",
    "@typescript-eslint/eslint-plugin": "8.50.1",
    "@typescript-eslint/parser": "8.50.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-svelte": "3.13.1",
    "globals": "16.5.0",
    "mdsvex": "0.12.6",
    "minisearch": "7.2.0",
    "prettier": "3.7.4",
    "prettier-plugin-svelte": "3.4.1",
    "svelte": "5.46.0",
    "svelte-check": "4.3.5",
    "svelte-eslint-parser": "1.4.1",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "vite": "7.3.0",
    "vite-imagetools": "9.0.2",
    "vitest": "4.0.16",
    "zod": "4.2.1"
  },
  "type": "module"
}
