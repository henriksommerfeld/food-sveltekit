{
  "name": "food-sveltekit",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "copy-images": "cp -rf ./static/uploads ./src/",
    "dev": "npm run copy-images && vite dev",
    "build": "npm run copy-images && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:once": "vitest --run",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "deps": "pnpm ls --depth Infinity --parseable | wc -l",
    "docker:build": "docker build -t food-sveltekit .",
    "docker:run": "docker run food-sveltekit"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@sindresorhus/slugify": "^3.0.0",
    "@sveltejs/adapter-auto": "^6.1.0",
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/kit": "^2.42.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.3",
    "globals": "^16.4.0",
    "mdsvex": "^0.12.6",
    "minisearch": "^7.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.38.10",
    "svelte-check": "^4.3.1",
    "svelte-eslint-parser": "^1.3.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vite-imagetools": "^7.0.4",
    "vitest": "^3.2.4",
    "zod": "^4.1.9"
  },
  "type": "module"
}
